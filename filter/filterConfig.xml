<filterConfig>
    <filterGroups>
        <!-- DataCite XML publication output -->
        <filterGroup
                symbolic="publication=>datacite-xml"
                displayName="plugins.importexport.datacite.displayName"
                description="plugins.importexport.datacite.description"
                inputType="class::classes.publication.Publication"
                outputType="xml::schema(http://schema.datacite.org/meta/kernel-4/metadata.xsd)" />
        <!-- DataCite XML chapter output -->
        <filterGroup
                symbolic="chapter=>datacite-xml"
                displayName="plugins.importexport.datacite.displayName"
                description="plugins.importexport.datacite.description"
                inputType="class::classes.monograph.Chapter"
                outputType="xml::schema(http://schema.datacite.org/meta/kernel-4/metadata.xsd)" />
        <!-- DataCite XML publication format output -->
        <filterGroup
                symbolic="publicationFormat=>datacite-xml"
                displayName="plugins.importexport.datacite.displayName"
                description="plugins.importexport.datacite.description"
                inputType="class::classes.publicationFormat.PublicationFormat"
                outputType="xml::schema(http://schema.datacite.org/meta/kernel-4/metadata.xsd)" />
    </filterGroups>
    <filters>
        <!-- DataCite XML publication output -->
        <filter
                inGroup="publication=>datacite-xml"
                class="APP\plugins\generic\datacite\filter\DataciteXmlFilter"
                isTemplate="0" />
        <!-- DataCite XML chapter output -->
        <filter
                inGroup="chapter=>datacite-xml"
                class="APP\plugins\generic\datacite\filter\DataciteXmlFilter"
                isTemplate="0" />
        <!-- DataCite XML publication format output -->
        <filter
                inGroup="publicationFormat=>datacite-xml"
                class="APP\plugins\generic\datacite\filter\DataciteXmlFilter"
                isTemplate="0" />
    </filters>
</filterConfig>
